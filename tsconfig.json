{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "esnext",
    "lib": ["DOM", "ESNext"],
    "types": [
      "node",
      "vite/client",
    ],
    "jsx": "preserve",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "incremental": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["packages/*"],
      "./*": ["./*"],
      "codemirror-editor-vue3": ["packages/index.ts"]
    }
  },
  "include": [
    "packages/**/*",
    "playground/**/*",
    "docs/**/*",
    "docs/demo/**/*.vue",
    "script",
    "types",
    "*.ts",
    "*.tsx",
    "*.vue",
    "*.d.ts",
    "*.md"
  ]
}
